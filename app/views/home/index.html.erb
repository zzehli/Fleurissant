      <% @latest_products.each do |product| %>
          <%= link_to product_path(product) do %>

            <div class="card bg-base-100 w-64 shadow-xl">
                  <figure>
                      <img
                      src= <%= product.image.present?? product.image : "https://placehold.co/500x600.webp" %>
                      alt="Shoes" />
                  </figure>
                <div class="card-body">
                    <h2 class="card-title">
                      <%= product.name %>
                    </h2>
                    <div class="card-actions justify-end">
                    </div>
                </div>
            </div>
          <% end %>

